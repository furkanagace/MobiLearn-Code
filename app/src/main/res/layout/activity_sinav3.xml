<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

  <TextView
      android:id="@+id/question_text"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:background="@drawable/button3"
      android:hint="sorular"
      android:padding="20dp"
      android:textColor="#FAF9F9"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="15dp"
      tools:ignore="HardcodedText" />


  <RadioGroup
      android:id="@+id/answer_options"
      android:layout_width="match_parent"
      android:layout_height="353dp"
      android:background="@drawable/button3"
      android:orientation="vertical"
      android:padding="16dp"
      android:textColor="@color/backbut"
      >

    <RadioButton
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/button3"
        android:minHeight="60dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck" />

    <RadioButton
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:minHeight="60dp"
        android:background="@drawable/button3"
        android:textStyle="bold"
        android:textColor="@color/backbut"
        android:textSize="18sp"
        tools:ignore="VisualLintButtonSize" />

    <RadioButton
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:minHeight="60dp"
        android:background="@drawable/button3"
        android:textSize="18sp"
        android:textColor="@color/backbut"
        android:textStyle="bold"
        tools:ignore="VisualLintButtonSize" />

    <RadioButton
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/button3"
        android:minHeight="48dp"
        android:textStyle="bold"
        android:textColor="@color/backbut"
        android:textSize="18sp"
        tools:ignore="VisualLintButtonSize" />
  </RadioGroup>

  <Button
      android:id="@+id/submit_button"
      android:layout_width="200dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:layout_marginStart="0dp"
      android:layout_marginTop="18dp"
      android:background="@drawable/button3"
      android:text="DiÄŸer Soru"
      android:textSize="20sp"
      android:textColor="@color/white"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />

  <TextView
      android:id="@+id/result_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      android:textSize="30sp"
      android:textColor="@color/backbut"
      android:layout_marginTop="200dp"
      android:gravity="center"
      android:textStyle="bold"
      android:visibility="gone" />

  <Button
      android:id="@+id/back_button"
      android:layout_width="200dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:layout_marginEnd="0dp"
      android:layout_marginTop="350dp"
      android:background="@drawable/button3"
      android:text="anasayfaya git"
      android:textSize="20sp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:visibility="invisible"
      tools:ignore="HardcodedText,VisualLintBounds" />


</LinearLayout>
